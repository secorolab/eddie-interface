STATES: S_START,S_CONFIGURE,S_IDLE,S_COMPILE,S_EXECUTE,S_EXIT

START_STATE: S_START
CURRENT_STATE: S_START
END_STATE: S_EXIT

EVENTS: E_CONFIGURE_ENTERED,E_CONFIGURE_EXIT,E_IDLE_ENTERED,E_IDLE_EXIT_EXECUTE,E_IDLE_EXIT_COMPILE,E_COMPILE_ENTERED,E_COMPILE_EXIT,E_EXECUTE_ENTERED,E_STEP

TRANSITIONS:
    T_START_CONFIGURE:
        FROM: @S_START
        TO: @S_CONFIGURE
    T_CONFIGURE_IDLE:
        FROM: @S_CONFIGURE
        TO: @S_IDLE
    T_IDLE_IDLE:
        FROM: @S_IDLE
        TO: @S_IDLE
    T_IDLE_EXECUTE:
        FROM: @S_IDLE
        TO: @S_EXECUTE
    T_IDLE_COMPILE:
        FROM: @S_IDLE
        TO: @S_COMPILE
    T_COMPILE_EXECUTE:
        FROM: @S_COMPILE
        TO: @S_EXECUTE
    T_EXECUTE_EXECUTE:
        FROM: @S_EXECUTE
        TO: @S_EXECUTE

REACTIONS:
    R_E_CONFIGURE_EXIT:
        WHEN: @E_CONFIGURE_EXIT
        DO: @T_CONFIGURE_IDLE
        FIRES: @E_IDLE_ENTERED
    R_E_IDLE_EXIT_EXECUTE:
        WHEN: @E_IDLE_EXIT_EXECUTE
        DO: @T_IDLE_EXECUTE
        FIRES: @E_EXECUTE_ENTERED
    R_E_IDLE_EXIT_COMPILE:
        WHEN: @E_IDLE_EXIT_COMPILE
        DO: @T_IDLE_COMPILE
        FIRES: @E_COMPILE_ENTERED
    R_E_COMPILE_EXIT:
        WHEN: @E_COMPILE_EXIT
        DO: @T_COMPILE_EXECUTE
        FIRES: @E_EXECUTE_ENTERED

    R_E_STEP1:
        WHEN: @E_STEP
        DO: @T_START_CONFIGURE
        FIRES: @E_CONFIGURE_ENTERED
    R_E_STEP2:
        WHEN: @E_STEP
        DO: @T_IDLE_IDLE
        FIRES: @E_IDLE_ENTERED
    R_E_STEP3:
        WHEN: @E_STEP
        DO: @T_EXECUTE_EXECUTE
        FIRES: @E_EXECUTE_ENTERED